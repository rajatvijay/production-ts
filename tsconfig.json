{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "outDir": "dist",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src"]
}
